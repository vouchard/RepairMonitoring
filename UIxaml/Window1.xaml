<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
       
        Title="Window1" Height="152" Width="400">
    <Grid Height="117" VerticalAlignment="Top" Margin="0,0,18,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cb_pic" HorizontalAlignment="Left" Height="35" Margin="10,50,0,0" VerticalAlignment="Top" Width="140" Text="CHOOSE PIC" FontWeight="Bold" FontSize="10.667" IsReadOnly="True"/>
        <TextBox x:Name="tb_bcd" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="35" Margin="185,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="175" FontSize="21.333"/>
        <Label x:Name="label" Content="ENDORSED FOR REPAIR" HorizontalAlignment="Left" Height="35" Margin="20,10,0,0" VerticalAlignment="Top" Width="235" Foreground="#FF1255CB" FontWeight="Bold" FontSize="18.667"/>

    </Grid>
</Window>
